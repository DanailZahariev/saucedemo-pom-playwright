{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": [
    "tests",
    "page-objects",
    "test-data",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}